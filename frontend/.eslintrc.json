{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
    ],
    "plugins": [
        "react",
        "react-hooks"
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "rules": {
        "react-hooks/exhaustive-deps": "warn",
        "react/prop-types": "off",
        "no-console": "warn"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}